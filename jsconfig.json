{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@tests/*": [
                "./server/tests/*"
            ],
            "@controllers/*": [
                "./server/controllers/*"
            ],
            "@helpers/*": [
                "./server/helpers/*"
            ],
            "@models/*": [
                "./server/models/*"
            ],
            "@config/*": [
                "./server/config/*"
            ],
            "@routes/*": [
                "./server/routes/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
}